<div class="container" style="margin:100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h2>Modificar el proyecto</h2>
            <form action="/admin/proyectos/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{proyecto.id}}" name="id">
                <div class="form-group">
                    <label for="">Página</label>
                    <input type="text" class="form-control" name="pagina" value="{{proyecto.pagina}}">
                </div>
                <div class="form-group">
                    <label for="">Dirección Web</label>
                    <input name="direccion_web" class="form-control" value="{{proyecto.direccion_web}}">
                </div>
                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">¿Eliminar imagen
                            actual?</label>
                        <input type="hidden" value="{{proyecto.img_id}}" name="img_original">
                    </p>
                </div>
                <div class="form-group">
                    <label for="">Detalle</label>
                    <textarea name="detalle" class="form-control" maxlength="190">{{proyecto.detalle}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>